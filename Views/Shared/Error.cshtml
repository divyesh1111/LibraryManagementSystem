@model LibraryManagementSystem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
        <div class="flex items-center justify-center w-24 h-24 mx-auto bg-red-100 rounded-full mb-6">
            <i class="fas fa-exclamation-triangle text-red-600 text-4xl"></i>
        </div>
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Oops! Something went wrong</h1>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">
            An error occurred while processing your request. Please try again later.
        </p>
        
        @if (Model?.ShowRequestId ?? false)
        {
            <p class="text-sm text-gray-500 mb-4">
                <strong>Request ID:</strong> <code class="bg-gray-100 px-2 py-1 rounded">@Model?.RequestId</code>
            </p>
        }

        <div class="flex justify-center space-x-4">
            <a href="/" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition">
                <i class="fas fa-home mr-2"></i> Go Home
            </a>
            <button onclick="history.back()" class="inline-flex items-center px-6 py-3 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition">
                <i class="fas fa-arrow-left mr-2"></i> Go Back
            </button>
        </div>
    </div>
</div>