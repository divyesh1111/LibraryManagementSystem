<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        .sidebar-link:hover { background-color: rgba(59, 130, 246, 0.1); }
        .sidebar-link.active { background-color: rgba(59, 130, 246, 0.2); border-left: 3px solid #3b82f6; }
    </style>
</head>
<body class="h-full bg-gray-50">
    <div class="min-h-full">
        <!-- Navigation -->
        <nav class="bg-gradient-to-r from-primary-700 to-primary-900 shadow-lg">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 items-center justify-between">
                    <div class="flex items-center">
                        <a href="/" class="flex items-center space-x-3">
                            <i class="fas fa-book-open text-white text-2xl"></i>
                            <span class="text-white font-bold text-xl">Library Management</span>
                        </a>
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-4">
                            <a href="/" class="text-white hover:bg-primary-600 px-3 py-2 rounded-md text-sm font-medium transition">
                                <i class="fas fa-home mr-1"></i> Dashboard
                            </a>
                            <a href="/Books" class="text-primary-100 hover:bg-primary-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                <i class="fas fa-book mr-1"></i> Books
                            </a>
                            <a href="/Authors" class="text-primary-100 hover:bg-primary-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                <i class="fas fa-pen-fancy mr-1"></i> Authors
                            </a>
                            <a href="/Customers" class="text-primary-100 hover:bg-primary-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                <i class="fas fa-users mr-1"></i> Customers
                            </a>
                            <a href="/LibraryBranches" class="text-primary-100 hover:bg-primary-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                <i class="fas fa-building mr-1"></i> Branches
                            </a>
                            <a href="/BookLoans" class="text-primary-100 hover:bg-primary-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                <i class="fas fa-exchange-alt mr-1"></i> Loans
                            </a>
                            <a href="/Categories" class="text-primary-100 hover:bg-primary-600 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition">
                                <i class="fas fa-tags mr-1"></i> Categories
                            </a>
                        </div>
                    </div>
                    <!-- Mobile menu button -->
                    <div class="md:hidden">
                        <button type="button" onclick="toggleMobileMenu()" class="text-white hover:bg-primary-600 p-2 rounded-md">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Mobile menu -->
            <div id="mobile-menu" class="hidden md:hidden bg-primary-800">
                <div class="space-y-1 px-2 pb-3 pt-2">
                    <a href="/" class="text-white block px-3 py-2 rounded-md text-base font-medium">Dashboard</a>
                    <a href="/Books" class="text-primary-100 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Books</a>
                    <a href="/Authors" class="text-primary-100 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Authors</a>
                    <a href="/Customers" class="text-primary-100 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Customers</a>
                    <a href="/LibraryBranches" class="text-primary-100 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Branches</a>
                    <a href="/BookLoans" class="text-primary-100 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Loans</a>
                    <a href="/Categories" class="text-primary-100 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Categories</a>
                </div>
            </div>
        </nav>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">@TempData["Success"]</span>
                    <button onclick="this.parentElement.remove()" class="absolute top-0 bottom-0 right-0 px-4 py-3">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">@TempData["Error"]</span>
                    <button onclick="this.parentElement.remove()" class="absolute top-0 bottom-0 right-0 px-4 py-3">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        }

        <!-- Main Content -->
        <main class="py-6">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-gray-800 mt-auto">
            <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    <p class="text-gray-400 text-sm">
                        &copy; @DateTime.Now.Year Library Management System. All rights reserved.
                    </p>
                    <div class="flex space-x-4 mt-4 md:mt-0">
                        <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-gray-400 hover:text-white transition"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>