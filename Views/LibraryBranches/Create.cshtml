@model LibraryManagementSystem.ViewModels.LibraryBranchCreateViewModel
@{
    ViewData["Title"] = "Add Library Branch";
}

<div class="max-w-4xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-6">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-building text-yellow-600 mr-2"></i>Add New Branch
            </h2>
        </div>
        <div>
            <a href="/LibraryBranches" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                <i class="fas fa-arrow-left mr-2"></i> Back to Branches
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg">
        <form asp-action="Create" method="post" class="p-6 space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded"></div>

            <!-- Basic Information -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b">Basic Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label asp-for="BranchName" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="BranchName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Enter branch name">
                        <span asp-validation-for="BranchName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="ManagerName" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="ManagerName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Manager's full name">
                        <span asp-validation-for="ManagerName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="EstablishedDate" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="EstablishedDate" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border">
                        <span asp-validation-for="EstablishedDate" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="TotalCapacity" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="TotalCapacity" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Total book capacity">
                        <span asp-validation-for="TotalCapacity" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="OpeningHours" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="OpeningHours" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Mon-Fri: 9AM-5PM">
                        <span asp-validation-for="OpeningHours" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Address -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b">Address</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Address" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Street address">
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="City" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="City" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="City">
                        <span asp-validation-for="City" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="State" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="State" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="State">
                        <span asp-validation-for="State" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="PostalCode" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Postal code">
                        <span asp-validation-for="PostalCode" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Country" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Country" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Country">
                        <span asp-validation-for="Country" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b">Contact Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="PhoneNumber" type="tel" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="+1-555-0100">
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Email" type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="branch@library.com">
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Website" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Website" type="url" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="https://library.com/branch">
                        <span asp-validation-for="Website" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Additional Information -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b">Additional Information</h3>
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="ImageUrl" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="https://example.com/branch-image.jpg">
                        <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
                        <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500 sm:text-sm px-3 py-2 border" placeholder="Branch description..."></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <div class="flex items-center">
                            <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-300 rounded" checked>
                            <label asp-for="IsActive" class="ml-2 block text-sm text-gray-900"></label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t">
                <a href="/LibraryBranches" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-yellow-600 border border-transparent rounded-md shadow-sm hover:bg-yellow-700">
                    <i class="fas fa-save mr-2"></i> Save Branch
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}