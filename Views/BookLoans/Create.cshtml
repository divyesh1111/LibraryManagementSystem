@model LibraryManagementSystem.ViewModels.BookLoanCreateViewModel
@{
    ViewData["Title"] = "New Book Loan";
}

<div class="max-w-2xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-6">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-hand-holding text-blue-600 mr-2"></i>New Book Loan
            </h2>
        </div>
        <div>
            <a href="/BookLoans" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                <i class="fas fa-arrow-left mr-2"></i> Back to Loans
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg">
        <form asp-action="Create" method="post" class="p-6 space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded"></div>

            <div class="space-y-6">
                <div>
                    <label asp-for="BookId" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="BookId" asp-items="Model.Books" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border">
                        <option value="">Select a Book</option>
                    </select>
                    <span asp-validation-for="BookId" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="CustomerId" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="CustomerId" asp-items="Model.Customers" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border">
                        <option value="">Select a Customer</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="LibraryBranchId" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="LibraryBranchId" asp-items="Model.LibraryBranches" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border">
                        <option value="">Select a Branch (Optional)</option>
                    </select>
                    <span asp-validation-for="LibraryBranchId" class="text-red-500 text-sm"></span>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="LoanDate" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="LoanDate" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border">
                        <span asp-validation-for="LoanDate" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="DueDate" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="DueDate" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border">
                        <span asp-validation-for="DueDate" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Notes" class="block text-sm font-medium text-gray-700"></label>
                    <textarea asp-for="Notes" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm px-3 py-2 border" placeholder="Optional notes about this loan..."></textarea>
                    <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex">
                    <i class="fas fa-info-circle text-blue-600 mt-0.5"></i>
                    <div class="ml-3">
                        <h4 class="text-sm font-medium text-blue-800">Loan Information</h4>
                        <p class="text-sm text-blue-700 mt-1">The default loan period is 14 days. Fine rate is $0.50 per day for overdue books.</p>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t">
                <a href="/BookLoans" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700">
                    <i class="fas fa-check mr-2"></i> Create Loan
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}