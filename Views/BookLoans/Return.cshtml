@model LibraryManagementSystem.ViewModels.BookLoanReturnViewModel
@{
    ViewData["Title"] = "Return Book";
}

<div class="max-w-2xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-6">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-undo text-green-600 mr-2"></i>Return Book
            </h2>
        </div>
        <div>
            <a href="/BookLoans" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                <i class="fas fa-arrow-left mr-2"></i> Back to Loans
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg">
        <form asp-action="Return" method="post" class="p-6 space-y-6">
            <input type="hidden" asp-for="Id" />

            <!-- Loan Summary -->
            <div class="bg-gray-50 rounded-lg p-4">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Loan Details</h3>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-sm text-gray-500">Book</p>
                        <p class="font-medium text-gray-900">@Model.BookTitle</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Customer</p>
                        <p class="font-medium text-gray-900">@Model.CustomerName</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Loan Date</p>
                        <p class="font-medium text-gray-900">@Model.LoanDate.ToString("MMM dd, yyyy")</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Due Date</p>
                        <p class="font-medium @(Model.DueDate < DateTime.Now ? "text-red-600" : "text-gray-900")">
                            @Model.DueDate.ToString("MMM dd, yyyy")
                            @if (Model.DueDate < DateTime.Now)
                            {
                                <span class="text-xs block">(@((int)(DateTime.Now - Model.DueDate).TotalDays) days overdue)</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Return Information -->
            <div class="space-y-4">
                <div>
                    <label asp-for="ReturnDate" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="ReturnDate" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="ReturnDate" class="text-red-500 text-sm"></span>
                </div>

                @if (Model.FineAmount > 0)
                {
                    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <i class="fas fa-exclamation-triangle text-red-600 mr-3"></i>
                                <div>
                                    <h4 class="text-sm font-medium text-red-800">Overdue Fine</h4>
                                    <p class="text-sm text-red-700">This book is overdue and a fine applies.</p>
                                </div>
                            </div>
                            <div class="text-2xl font-bold text-red-600">
                                $@Model.FineAmount.ToString("F2")
                            </div>
                        </div>
                        <input type="hidden" asp-for="FineAmount" />
                    </div>
                }
                else
                {
                    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <i class="fas fa-check-circle text-green-600 mr-3"></i>
                            <div>
                                <h4 class="text-sm font-medium text-green-800">On Time Return</h4>
                                <p class="text-sm text-green-700">This book is being returned on time. No fine applies.</p>
                            </div>
                        </div>
                        <input type="hidden" asp-for="FineAmount" value="0" />
                    </div>
                }

                <div>
                    <label asp-for="Notes" class="block text-sm font-medium text-gray-700"></label>
                    <textarea asp-for="Notes" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="Optional notes about the return..."></textarea>
                    <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t">
                <a href="/BookLoans" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md shadow-sm hover:bg-green-700">
                    <i class="fas fa-check mr-2"></i> Confirm Return
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}