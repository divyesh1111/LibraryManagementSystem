@model LibraryManagementSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
                <i class="fas fa-tachometer-alt text-primary-600 mr-2"></i>Dashboard
            </h2>
            <p class="mt-1 text-sm text-gray-500">Welcome to the Library Management System</p>
        </div>
        <div class="mt-4 flex md:ml-4 md:mt-0">
            <a href="/BookLoans/Create" class="ml-3 inline-flex items-center rounded-md bg-primary-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-700 transition">
                <i class="fas fa-plus mr-2"></i> New Loan
            </a>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Total Books -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-primary-500 p-3">
                    <i class="fas fa-book text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Total Books</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-gray-900">@Model.TotalBooks</p>
                <p class="ml-2 text-sm text-green-600">
                    <span class="font-medium">@Model.AvailableBooks available</span>
                </p>
            </dd>
        </div>

        <!-- Total Authors -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-indigo-500 p-3">
                    <i class="fas fa-pen-fancy text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Total Authors</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-gray-900">@Model.TotalAuthors</p>
            </dd>
        </div>

        <!-- Total Customers -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-green-500 p-3">
                    <i class="fas fa-users text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Total Customers</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-gray-900">@Model.TotalCustomers</p>
            </dd>
        </div>

        <!-- Library Branches -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-yellow-500 p-3">
                    <i class="fas fa-building text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Library Branches</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-gray-900">@Model.TotalBranches</p>
            </dd>
        </div>

        <!-- Active Loans -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-blue-500 p-3">
                    <i class="fas fa-exchange-alt text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Active Loans</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-gray-900">@Model.ActiveLoans</p>
            </dd>
        </div>

        <!-- Overdue Loans -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-red-500 p-3">
                    <i class="fas fa-exclamation-triangle text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Overdue Loans</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-red-600">@Model.OverdueLoans</p>
            </dd>
        </div>

        <!-- Categories -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-purple-500 p-3">
                    <i class="fas fa-tags text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Categories</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-gray-900">@Model.TotalCategories</p>
            </dd>
        </div>

        <!-- Total Reviews -->
        <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:px-6 sm:py-6">
            <dt>
                <div class="absolute rounded-md bg-pink-500 p-3">
                    <i class="fas fa-star text-white text-xl"></i>
                </div>
                <p class="ml-16 truncate text-sm font-medium text-gray-500">Total Reviews</p>
            </dt>
            <dd class="ml-16 flex items-baseline">
                <p class="text-2xl font-semibold text-gray-900">@Model.TotalReviews</p>
            </dd>
        </div>
    </div>

    <!-- Recent Books and Loans Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Books -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h3 class="text-lg font-medium leading-6 text-gray-900">
                        <i class="fas fa-book text-primary-500 mr-2"></i>Recent Books
                    </h3>
                    <a href="/Books" class="text-sm text-primary-600 hover:text-primary-800">View all →</a>
                </div>
            </div>
            <ul class="divide-y divide-gray-200">
                @foreach (var book in Model.RecentBooks)
                {
                    <li class="px-4 py-4 hover:bg-gray-50 transition">
                        <div class="flex items-center space-x-4">
                            <div class="flex-shrink-0">
                                @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                                {
                                    <img class="h-12 w-10 rounded object-cover" src="@book.CoverImageUrl" alt="@book.Title">
                                }
                                else
                                {
                                    <div class="h-12 w-10 rounded bg-gray-200 flex items-center justify-center">
                                        <i class="fas fa-book text-gray-400"></i>
                                    </div>
                                }
                            </div>
                            <div class="min-w-0 flex-1">
                                <a href="/Books/Details/@book.Id" class="text-sm font-medium text-gray-900 hover:text-primary-600">@book.Title</a>
                                <p class="text-sm text-gray-500">@book.AuthorName</p>
                            </div>
                            <div>
                                @if (book.AvailableCopies > 0)
                                {
                                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                                        Available
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                                        Unavailable
                                    </span>
                                }
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <!-- Recent Loans -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h3 class="text-lg font-medium leading-6 text-gray-900">
                        <i class="fas fa-exchange-alt text-blue-500 mr-2"></i>Recent Loans
                    </h3>
                    <a href="/BookLoans" class="text-sm text-primary-600 hover:text-primary-800">View all →</a>
                </div>
            </div>
            <ul class="divide-y divide-gray-200">
                @foreach (var loan in Model.RecentLoans)
                {
                    <li class="px-4 py-4 hover:bg-gray-50 transition">
                        <div class="flex items-center justify-between">
                            <div class="min-w-0 flex-1">
                                <p class="text-sm font-medium text-gray-900">@loan.BookTitle</p>
                                <p class="text-sm text-gray-500">@loan.CustomerName</p>
                            </div>
                            <div class="ml-4 flex-shrink-0">
                                @if (loan.Status == LibraryManagementSystem.Models.LoanStatus.Active)
                                {
                                    <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                                        Active
                                    </span>
                                }
                                else if (loan.Status == LibraryManagementSystem.Models.LoanStatus.Overdue)
                                {
                                    <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                                        Overdue
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                                        Returned
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="mt-2 text-xs text-gray-500">
                            Due: @loan.DueDate.ToString("MMM dd, yyyy")
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- New Customers -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <div class="flex justify-between items-center">
                <h3 class="text-lg font-medium leading-6 text-gray-900">
                    <i class="fas fa-user-plus text-green-500 mr-2"></i>New Members
                </h3>
                <a href="/Customers" class="text-sm text-primary-600 hover:text-primary-800">View all →</a>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member Since</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var customer in Model.NewCustomers)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-10 w-10 flex-shrink-0">
                                        <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                            <span class="text-primary-600 font-medium">@customer.FirstName[0]@customer.LastName[0]</span>
                                        </div>
                                    </div>
                                    <div class="ml-4">
                                        <a href="/Customers/Details/@customer.Id" class="text-sm font-medium text-gray-900 hover:text-primary-600">
                                            @customer.FullName
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@customer.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@customer.MembershipDate.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (customer.IsActiveMember)
                                {
                                    <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                                        Inactive
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">
            <i class="fas fa-bolt text-yellow-500 mr-2"></i>Quick Actions
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="/Books/Create" class="flex flex-col items-center p-4 bg-primary-50 rounded-lg hover:bg-primary-100 transition">
                <i class="fas fa-plus-circle text-primary-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-primary-700">Add Book</span>
            </a>
            <a href="/Authors/Create" class="flex flex-col items-center p-4 bg-indigo-50 rounded-lg hover:bg-indigo-100 transition">
                <i class="fas fa-user-plus text-indigo-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-indigo-700">Add Author</span>
            </a>
            <a href="/Customers/Create" class="flex flex-col items-center p-4 bg-green-50 rounded-lg hover:bg-green-100 transition">
                <i class="fas fa-user-plus text-green-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-green-700">Add Customer</span>
            </a>
            <a href="/BookLoans/Create" class="flex flex-col items-center p-4 bg-blue-50 rounded-lg hover:bg-blue-100 transition">
                <i class="fas fa-hand-holding text-blue-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-blue-700">New Loan</span>
            </a>
        </div>
    </div>
</div>