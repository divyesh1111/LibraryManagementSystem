@model LibraryManagementSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">
            <i class="fas fa-tachometer-alt text-blue-600 mr-2"></i>Dashboard
        </h1>
        <p class="text-gray-600 mt-2">Welcome to the Library Management System</p>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Books -->
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">Total Books</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.TotalBooks</p>
                </div>
                <div class="bg-blue-100 rounded-full p-3">
                    <i class="fas fa-book text-blue-600 text-2xl"></i>
                </div>
            </div>
            <p class="text-green-600 text-sm mt-2">
                <i class="fas fa-check-circle mr-1"></i>@Model.AvailableBooks available
            </p>
        </div>

        <!-- Total Authors -->
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">Total Authors</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.TotalAuthors</p>
                </div>
                <div class="bg-purple-100 rounded-full p-3">
                    <i class="fas fa-pen-fancy text-purple-600 text-2xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Customers -->
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">Total Members</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.TotalCustomers</p>
                </div>
                <div class="bg-green-100 rounded-full p-3">
                    <i class="fas fa-users text-green-600 text-2xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Branches -->
        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-orange-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm font-medium">Library Branches</p>
                    <p class="text-3xl font-bold text-gray-800">@Model.TotalBranches</p>
                </div>
                <div class="bg-orange-100 rounded-full p-3">
                    <i class="fas fa-building text-orange-600 text-2xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Recent Books -->
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-800">
                    <i class="fas fa-book text-blue-600 mr-2"></i>Recent Books
                </h2>
                <a href="/Books" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="p-6">
                @if (Model.RecentBooks.Any())
                {
                    <ul class="divide-y divide-gray-200">
                        @foreach (var book in Model.RecentBooks)
                        {
                            <li class="py-3 flex justify-between items-center">
                                <div>
                                    <a href="/Books/Details/@book.Id" class="font-medium text-gray-800 hover:text-blue-600">
                                        @book.Title
                                    </a>
                                    <p class="text-sm text-gray-500">by @book.AuthorName</p>
                                </div>
                                <span class="px-2 py-1 text-xs rounded-full @(book.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                    @(book.IsAvailable ? "Available" : "Unavailable")
                                </span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-gray-500 text-center py-4">No books found</p>
                }
            </div>
        </div>

        <!-- Top Authors -->
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-800">
                    <i class="fas fa-pen-fancy text-purple-600 mr-2"></i>Top Authors
                </h2>
                <a href="/Authors" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="p-6">
                @if (Model.TopAuthors.Any())
                {
                    <ul class="divide-y divide-gray-200">
                        @foreach (var author in Model.TopAuthors)
                        {
                            <li class="py-3 flex justify-between items-center">
                                <div>
                                    <a href="/Authors/Details/@author.Id" class="font-medium text-gray-800 hover:text-blue-600">
                                        @author.FullName
                                    </a>
                                    <p class="text-sm text-gray-500">@(author.Nationality ?? "Unknown nationality")</p>
                                </div>
                                <span class="px-2 py-1 text-xs bg-purple-100 text-purple-800 rounded-full">
                                    @author.BookCount books
                                </span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-gray-500 text-center py-4">No authors found</p>
                }
            </div>
        </div>

        <!-- Recent Members -->
        <div class="bg-white rounded-lg shadow-md lg:col-span-2">
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-800">
                    <i class="fas fa-users text-green-600 mr-2"></i>Recent Members
                </h2>
                <a href="/Customers" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="p-6">
                @if (Model.RecentCustomers.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Library Card</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member Since</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var customer in Model.RecentCustomers)
                                {
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <a href="/Customers/Details/@customer.Id" class="font-medium text-gray-800 hover:text-blue-600">
                                                @customer.FullName
                                            </a>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            @customer.Email
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            @(customer.LibraryCardNumber ?? "N/A")
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 text-xs rounded-full @(customer.IsActiveMember ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                                @(customer.IsActiveMember ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            @customer.MembershipDate.ToString("MMM dd, yyyy")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-gray-500 text-center py-4">No members found</p>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
            <i class="fas fa-bolt text-yellow-500 mr-2"></i>Quick Actions
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="/Books/Create" class="flex flex-col items-center p-4 bg-blue-50 rounded-lg hover:bg-blue-100 transition">
                <i class="fas fa-plus-circle text-blue-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-gray-700">Add Book</span>
            </a>
            <a href="/Authors/Create" class="flex flex-col items-center p-4 bg-purple-50 rounded-lg hover:bg-purple-100 transition">
                <i class="fas fa-user-plus text-purple-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-gray-700">Add Author</span>
            </a>
            <a href="/Customers/Create" class="flex flex-col items-center p-4 bg-green-50 rounded-lg hover:bg-green-100 transition">
                <i class="fas fa-user-plus text-green-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-gray-700">Add Member</span>
            </a>
            <a href="/LibraryBranches/Create" class="flex flex-col items-center p-4 bg-orange-50 rounded-lg hover:bg-orange-100 transition">
                <i class="fas fa-building text-orange-600 text-2xl mb-2"></i>
                <span class="text-sm font-medium text-gray-700">Add Branch</span>
            </a>
        </div>
    </div>
</div>