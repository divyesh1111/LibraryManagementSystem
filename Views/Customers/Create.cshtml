@model LibraryManagementSystem.ViewModels.CustomerCreateViewModel
@{
    ViewData["Title"] = "Add Customer";
}

<div class="max-w-4xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-6">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-user-plus text-green-600 mr-2"></i>Add New Customer
            </h2>
        </div>
        <div>
            <a href="/Customers" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                <i class="fas fa-arrow-left mr-2"></i> Back to Customers
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg">
        <form asp-action="Create" method="post" class="p-6 space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded"></div>

            <!-- Personal Information -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b">Personal Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="FirstName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="Enter first name">
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="LastName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="Enter last name">
                        <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Email" type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="customer@email.com">
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="PhoneNumber" type="tel" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="+1-555-0100">
                        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="DateOfBirth" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border">
                        <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="ProfileImageUrl" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="ProfileImageUrl" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="https://example.com/photo.jpg">
                        <span asp-validation-for="ProfileImageUrl" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b">Address Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Address" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="Street address">
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="City" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="City" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="City">
                        <span asp-validation-for="City" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="PostalCode" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="Postal code">
                        <span asp-validation-for="PostalCode" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Country" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Country" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border" placeholder="Country">
                        <span asp-validation-for="Country" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Membership Information -->
            <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4 pb-2 border-b">Membership Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="PreferredBranchId" class="block text-sm font-medium text-gray-700"></label>
                        <select asp-for="PreferredBranchId" asp-items="Model.LibraryBranches" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border">
                            <option value="">Select Preferred Branch</option>
                        </select>
                        <span asp-validation-for="PreferredBranchId" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="MembershipExpiry" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="MembershipExpiry" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border">
                        <span asp-validation-for="MembershipExpiry" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="md:col-span-2">
                        <div class="flex items-center">
                            <input asp-for="IsActiveMember" type="checkbox" class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" checked>
                            <label asp-for="IsActiveMember" class="ml-2 block text-sm text-gray-900"></label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t">
                <a href="/Customers" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md shadow-sm hover:bg-green-700">
                    <i class="fas fa-save mr-2"></i> Save Customer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}