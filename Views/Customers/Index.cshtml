@model LibraryManagementSystem.ViewModels.CustomerListViewModel
@{
    ViewData["Title"] = "Customers";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-users text-green-600 mr-2"></i>Customers
            </h2>
            <p class="mt-1 text-sm text-gray-500">Manage library members</p>
        </div>
        <div class="mt-4 flex md:ml-4 md:mt-0">
            <a href="/Customers/Create" class="inline-flex items-center rounded-md bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-700 transition">
                <i class="fas fa-plus mr-2"></i> Add Customer
            </a>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white shadow rounded-lg p-4">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                       class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border"
                       placeholder="Search by name, email, or card number...">
            </div>
            <div>
                <select name="sortBy" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm px-3 py-2 border">
                    <option value="">Name (A-Z)</option>
                    <option value="name_desc" selected="@(Model.SortBy == "name_desc")">Name (Z-A)</option>
                    <option value="email" selected="@(Model.SortBy == "email")">Email</option>
                    <option value="newest" selected="@(Model.SortBy == "newest")">Newest First</option>
                    <option value="oldest" selected="@(Model.SortBy == "oldest")">Oldest First</option>
                </select>
            </div>
            <div class="flex items-center">
                <label class="flex items-center">
                    <input type="checkbox" name="activeOnly" value="true" class="h-4 w-4 text-green-600 border-gray-300 rounded" @(Model.ActiveOnly == true ? "checked" : "")>
                    <span class="ml-2 text-sm text-gray-700">Active Only</span>
                </label>
            </div>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">
                <i class="fas fa-search mr-2"></i> Search
            </button>
            <a href="/Customers" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 bg-white rounded-md hover:bg-gray-50">
                Clear
            </a>
        </form>
    </div>

    <!-- Results Info -->
    <div class="flex justify-between items-center">
        <p class="text-sm text-gray-700">
            Showing <span class="font-medium">@Model.Customers.Count()</span> of <span class="font-medium">@Model.TotalCount</span> customers
        </p>
    </div>

    <!-- Customers Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Library Card</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active Loans</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var customer in Model.Customers)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="h-10 w-10 flex-shrink-0">
                                    @if (!string.IsNullOrEmpty(customer.ProfileImageUrl))
                                    {
                                        <img class="h-10 w-10 rounded-full object-cover" src="@customer.ProfileImageUrl" alt="@customer.FullName">
                                    }
                                    else
                                    {
                                        <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                                            <span class="text-green-600 font-medium">@customer.FirstName[0]@customer.LastName[0]</span>
                                        </div>
                                    }
                                </div>
                                <div class="ml-4">
                                    <a href="/Customers/Details/@customer.Id" class="text-sm font-medium text-gray-900 hover:text-green-600">
                                        @customer.FullName
                                    </a>
                                    <p class="text-xs text-gray-500">Member since @customer.MembershipDate.ToString("MMM yyyy")</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <p class="text-sm text-gray-900">@customer.Email</p>
                            @if (!string.IsNullOrEmpty(customer.PhoneNumber))
                            {
                                <p class="text-xs text-gray-500">@customer.PhoneNumber</p>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm font-mono text-gray-600">@(customer.LibraryCardNumber ?? "N/A")</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (customer.ActiveLoansCount > 0)
                            {
                                <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                                    @customer.ActiveLoansCount active
                                </span>
                            }
                            else
                            {
                                <span class="text-sm text-gray-500">None</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (customer.IsActiveMember)
                            {
                                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                                    Active
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                                    Inactive
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/Customers/Details/@customer.Id" class="text-gray-600 hover:text-gray-900 mr-3">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/Customers/Edit/@customer.Id" class="text-green-600 hover:text-green-900 mr-3">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Customers/Delete/@customer.Id" class="text-red-600 hover:text-red-900">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Customers.Any())
    {
        <div class="text-center py-12 bg-white rounded-lg shadow">
            <i class="fas fa-users text-gray-400 text-5xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900">No customers found</h3>
            <p class="text-gray-500 mt-2">Get started by adding a new customer.</p>
            <a href="/Customers/Create" class="mt-4 inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">
                <i class="fas fa-plus mr-2"></i> Add Customer
            </a>
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="flex items-center justify-between bg-white px-4 py-3 rounded-lg shadow">
            <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                <p class="text-sm text-gray-700">
                    Page <span class="font-medium">@Model.PageNumber</span> of <span class="font-medium">@Model.TotalPages</span>
                </p>
                <div class="flex space-x-2">
                    @if (Model.PageNumber > 1)
                    {
                        <a href="?pageNumber=@(Model.PageNumber - 1)&searchTerm=@Model.SearchTerm&sortBy=@Model.SortBy&activeOnly=@Model.ActiveOnly" 
                           class="px-3 py-2 text-sm bg-white border rounded-md hover:bg-gray-50">Previous</a>
                    }
                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <a href="?pageNumber=@(Model.PageNumber + 1)&searchTerm=@Model.SearchTerm&sortBy=@Model.SortBy&activeOnly=@Model.ActiveOnly" 
                           class="px-3 py-2 text-sm bg-white border rounded-md hover:bg-gray-50">Next</a>
                    }
                </div>
            </div>
        </nav>
    }
</div>