@model LibraryManagementSystem.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="max-w-2xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-6">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-edit text-purple-600 mr-2"></i>Edit Category
            </h2>
        </div>
        <div>
            <a href="/Categories" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                <i class="fas fa-arrow-left mr-2"></i> Back to Categories
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg">
        <form asp-action="Edit" method="post" class="p-6 space-y-6">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded"></div>

            <div class="space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
                    <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm px-3 py-2 border"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="ColorCode" class="block text-sm font-medium text-gray-700"></label>
                        <div class="mt-1 flex items-center space-x-2">
                            <input type="color" value="@Model.ColorCode" onchange="document.getElementById('ColorCode').value = this.value" class="h-10 w-20 rounded border-gray-300">
                            <input asp-for="ColorCode" type="text" class="flex-1 rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm px-3 py-2 border">
                        </div>
                        <span asp-validation-for="ColorCode" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="DisplayOrder" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="DisplayOrder" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm px-3 py-2 border">
                        <span asp-validation-for="DisplayOrder" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="IconClass" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="IconClass" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="IconClass" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                        <label asp-for="IsActive" class="ml-2 block text-sm text-gray-900"></label>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t">
                <a href="/Categories" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-purple-600 border border-transparent rounded-md shadow-sm hover:bg-purple-700">
                    <i class="fas fa-save mr-2"></i> Update Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}