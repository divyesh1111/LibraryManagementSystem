@model IEnumerable<LibraryManagementSystem.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-tags text-purple-600 mr-2"></i>Categories
            </h2>
            <p class="mt-1 text-sm text-gray-500">Organize books by genre and category</p>
        </div>
        <div class="mt-4 flex md:ml-4 md:mt-0">
            <a href="/Categories/Create" class="inline-flex items-center rounded-md bg-purple-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-purple-700 transition">
                <i class="fas fa-plus mr-2"></i> Add Category
            </a>
        </div>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @foreach (var category in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                <div class="h-2" style="background-color: @(category.ColorCode ?? "#6366F1")"></div>
                <div class="p-5">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-900">
                            <a href="/Categories/Details/@category.Id" class="hover:text-purple-600">@category.Name</a>
                        </h3>
                        @if (category.IsActive)
                        {
                            <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">
                                Active
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-800">
                                Inactive
                            </span>
                        }
                    </div>
                    
                    @if (!string.IsNullOrEmpty(category.Description))
                    {
                        <p class="mt-2 text-sm text-gray-600 line-clamp-2">@category.Description</p>
                    }

                    <div class="mt-4 flex items-center justify-between">
                        <span class="inline-flex items-center text-sm text-gray-500">
                            <i class="fas fa-book mr-1"></i> @category.Books.Count books
                        </span>
                        <div class="flex space-x-2">
                            <a href="/Categories/Details/@category.Id" class="text-gray-400 hover:text-gray-600" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/Categories/Edit/@category.Id" class="text-purple-400 hover:text-purple-600" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Categories/Delete/@category.Id" class="text-red-400 hover:text-red-600" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12 bg-white rounded-lg shadow">
            <i class="fas fa-tags text-gray-400 text-5xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900">No categories found</h3>
            <p class="text-gray-500 mt-2">Get started by adding a new category.</p>
            <a href="/Categories/Create" class="mt-4 inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700">
                <i class="fas fa-plus mr-2"></i> Add Category
            </a>
        </div>
    }
</div>