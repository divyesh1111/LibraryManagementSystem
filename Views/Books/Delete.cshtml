@model LibraryManagementSystem.ViewModels.BookDetailsViewModel
@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mx-auto px-4 py-8">
    <!-- Back Button -->
    <a href="/Books" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6">
        <i class="fas fa-arrow-left mr-2"></i>Back to Books
    </a>

    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-8">
            <!-- Warning Icon -->
            <div class="text-center mb-6">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mb-4">
                    <i class="fas fa-exclamation-triangle text-red-600 text-3xl"></i>
                </div>
                <h1 class="text-2xl font-bold text-gray-800">Delete Book</h1>
                <p class="text-gray-600 mt-2">Are you sure you want to delete this book? This action cannot be undone.</p>
            </div>

            <!-- Book Details -->
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <div class="flex items-start gap-4">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl" alt="@Model.Title" class="w-24 h-32 object-cover rounded shadow">
                    }
                    else
                    {
                        <div class="w-24 h-32 bg-gray-200 rounded flex items-center justify-center">
                            <i class="fas fa-book text-gray-400 text-2xl"></i>
                        </div>
                    }
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800">@Model.Title</h2>
                        <p class="text-gray-600">by @Model.AuthorName</p>
                        <p class="text-sm text-gray-500 mt-1">ISBN: @Model.ISBN</p>
                        @if (!string.IsNullOrEmpty(Model.Genre))
                        {
                            <span class="inline-block mt-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">
                                @Model.Genre
                            </span>
                        }
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="flex gap-4 justify-center">
                    <button type="submit" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                        <i class="fas fa-trash mr-2"></i>Yes, Delete Book
                    </button>
                    <a href="/Books" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                        <i class="fas fa-times mr-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>