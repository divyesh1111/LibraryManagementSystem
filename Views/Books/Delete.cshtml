@model LibraryManagementSystem.Models.Book
@{
    ViewData["Title"] = "Delete Book";
}

<div class="max-w-2xl mx-auto">
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="p-6">
            <div class="flex items-center justify-center w-16 h-16 mx-auto bg-red-100 rounded-full">
                <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
            </div>
            <h2 class="mt-4 text-2xl font-bold text-center text-gray-900">Delete Book</h2>
            <p class="mt-2 text-center text-gray-600">Are you sure you want to delete this book? This action cannot be undone.</p>

            <div class="mt-6 bg-gray-50 rounded-lg p-4">
                <h3 class="font-semibold text-lg text-gray-900">@Model.Title</h3>
                <p class="text-gray-600">by @Model.Author?.FirstName @Model.Author?.LastName</p>
                <p class="text-sm text-gray-500 mt-1">ISBN: @Model.ISBN</p>
                @if (!string.IsNullOrEmpty(Model.Category?.Name))
                {
                    <span class="inline-flex items-center rounded-full bg-primary-100 px-2.5 py-0.5 text-xs font-medium text-primary-800 mt-2">
                        @Model.Category.Name
                    </span>
                }
            </div>

            <div class="mt-6 flex justify-center space-x-4">
                <a href="/Books" class="px-6 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
                    Cancel
                </a>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-md shadow-sm hover:bg-red-700">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>