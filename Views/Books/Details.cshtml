@model LibraryManagementSystem.ViewModels.BookDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mx-auto px-4 py-8">
    <!-- Back Button -->
    <a href="/Books" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6">
        <i class="fas fa-arrow-left mr-2"></i>Back to Books
    </a>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="md:flex">
            <!-- Book Cover -->
            <div class="md:w-1/3 bg-gray-200 flex items-center justify-center p-8">
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <img src="@Model.CoverImageUrl" alt="@Model.Title" class="max-w-full h-auto rounded-lg shadow-lg">
                }
                else
                {
                    <div class="text-center">
                        <i class="fas fa-book text-gray-400 text-8xl mb-4"></i>
                        <p class="text-gray-500">No cover image</p>
                    </div>
                }
            </div>

            <!-- Book Details -->
            <div class="md:w-2/3 p-8">
                <div class="flex items-start justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800">@Model.Title</h1>
                        <p class="text-xl text-gray-600 mt-2">
                            by <a href="/Authors/Details/@Model.AuthorId" class="text-blue-600 hover:underline">@Model.AuthorName</a>
                        </p>
                    </div>
                    <span class="px-3 py-1 text-sm rounded-full @(Model.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        @(Model.IsAvailable ? "Available" : "Not Available")
                    </span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Genre))
                {
                    <span class="inline-block mt-4 px-3 py-1 text-sm bg-blue-100 text-blue-800 rounded-full">
                        @Model.Genre
                    </span>
                }

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">Description</h3>
                        <p class="text-gray-600 leading-relaxed">@Model.Description</p>
                    </div>
                }

                <div class="mt-6 grid grid-cols-2 gap-4">
                    <div class="bg-gray-50 rounded-lg p-4">
                        <p class="text-sm text-gray-500">ISBN</p>
                        <p class="font-medium text-gray-800">@Model.ISBN</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Publisher))
                    {
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-sm text-gray-500">Publisher</p>
                            <p class="font-medium text-gray-800">@Model.Publisher</p>
                        </div>
                    }
                    @if (Model.PublicationDate.HasValue)
                    {
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-sm text-gray-500">Publication Date</p>
                            <p class="font-medium text-gray-800">@Model.PublicationDate.Value.ToString("MMMM dd, yyyy")</p>
                        </div>
                    }
                    @if (Model.PageCount.HasValue)
                    {
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-sm text-gray-500">Pages</p>
                            <p class="font-medium text-gray-800">@Model.PageCount</p>
                        </div>
                    }
                    <div class="bg-gray-50 rounded-lg p-4">
                        <p class="text-sm text-gray-500">Availability</p>
                        <p class="font-medium text-gray-800">@Model.AvailableCopies of @Model.TotalCopies copies</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.LibraryBranchName))
                    {
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-sm text-gray-500">Location</p>
                            <a href="/LibraryBranches/Details/@Model.LibraryBranchId" class="font-medium text-blue-600 hover:underline">
                                @Model.LibraryBranchName
                            </a>
                        </div>
                    }
                </div>

                <div class="mt-6 text-sm text-gray-500">
                    Added on @Model.CreatedDate.ToString("MMMM dd, yyyy")
                </div>

                <!-- Actions -->
                <div class="mt-8 flex gap-4">
                    <a href="/Books/Edit/@Model.Id" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                        <i class="fas fa-edit mr-2"></i>Edit Book
                    </a>
                    <a href="/Books/Delete/@Model.Id" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                        <i class="fas fa-trash mr-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>