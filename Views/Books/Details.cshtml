@model LibraryManagementSystem.ViewModels.BookDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="max-w-6xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
        <a href="/Books" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <i class="fas fa-arrow-left mr-2"></i> Back to Books
        </a>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="md:flex">
            <!-- Book Cover -->
            <div class="md:w-1/3 p-6 bg-gray-50">
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <img src="@Model.CoverImageUrl" alt="@Model.Title" class="w-full rounded-lg shadow-md">
                }
                else
                {
                    <div class="w-full aspect-[3/4] bg-gray-200 rounded-lg flex items-center justify-center">
                        <i class="fas fa-book text-gray-400 text-6xl"></i>
                    </div>
                }

                <div class="mt-6 space-y-2">
                    @if (Model.AvailableCopies > 0)
                    {
                        <span class="inline-flex items-center w-full justify-center rounded-full bg-green-100 px-4 py-2 text-sm font-medium text-green-800">
                            <i class="fas fa-check-circle mr-2"></i> @Model.AvailableCopies of @Model.TotalCopies Available
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center w-full justify-center rounded-full bg-red-100 px-4 py-2 text-sm font-medium text-red-800">
                            <i class="fas fa-times-circle mr-2"></i> Currently Unavailable
                        </span>
                    }
                </div>

                <!-- Actions -->
                <div class="mt-6 space-y-2">
                    <a href="/Books/Edit/@Model.Id" class="w-full inline-flex justify-center items-center px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition">
                        <i class="fas fa-edit mr-2"></i> Edit Book
                    </a>
                    <a href="/Books/Delete/@Model.Id" class="w-full inline-flex justify-center items-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition">
                        <i class="fas fa-trash mr-2"></i> Delete Book
                    </a>
                </div>
            </div>

            <!-- Book Details -->
            <div class="md:w-2/3 p-6">
                <div class="flex items-start justify-between">
                    <div>
                        @if (!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <span class="inline-flex items-center rounded-full bg-primary-100 px-3 py-0.5 text-sm font-medium text-primary-800 mb-2">
                                @Model.CategoryName
                            </span>
                        }
                        <h1 class="text-3xl font-bold text-gray-900">@Model.Title</h1>
                        <p class="text-lg text-gray-600 mt-1">
                            by <a href="/Authors/Details/@Model.AuthorId" class="text-primary-600 hover:underline">@Model.AuthorName</a>
                        </p>
                    </div>
                    @if (Model.Price.HasValue)
                    {
                        <div class="text-2xl font-bold text-primary-600">
                            $@Model.Price.Value.ToString("F2")
                        </div>
                    }
                </div>

                <!-- Rating -->
                @if (Model.ReviewCount > 0)
                {
                    <div class="mt-4 flex items-center">
                        <div class="flex items-center">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= Math.Round(Model.AverageRating) ? "text-yellow-400" : "text-gray-300")"></i>
                            }
                        </div>
                        <span class="ml-2 text-sm text-gray-600">@Model.AverageRating.ToString("F1") (@Model.ReviewCount reviews)</span>
                    </div>
                }

                <!-- Book Info Grid -->
                <div class="mt-6 grid grid-cols-2 gap-4">
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-sm text-gray-500">ISBN</p>
                        <p class="font-medium text-gray-900">@Model.ISBN</p>
                    </div>
                    @if (Model.PublicationDate.HasValue)
                    {
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500">Publication Date</p>
                            <p class="font-medium text-gray-900">@Model.PublicationDate.Value.ToString("MMMM dd, yyyy")</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Publisher))
                    {
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500">Publisher</p>
                            <p class="font-medium text-gray-900">@Model.Publisher</p>
                        </div>
                    }
                    @if (Model.PageCount.HasValue)
                    {
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500">Pages</p>
                            <p class="font-medium text-gray-900">@Model.PageCount pages</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Language))
                    {
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500">Language</p>
                            <p class="font-medium text-gray-900">@Model.Language</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.LibraryBranchName))
                    {
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500">Branch</p>
                            <a href="/LibraryBranches/Details/@Model.LibraryBranchId" class="font-medium text-primary-600 hover:underline">@Model.LibraryBranchName</a>
                        </div>
                    }
                </div>

                <!-- Description -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-6">
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Description</h3>
                        <p class="text-gray-600 leading-relaxed">@Model.Description</p>
                    </div>
                }

                <!-- Timestamps -->
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <div class="flex justify-between text-sm text-gray-500">
                        <span>Added: @Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                        @if (Model.UpdatedDate.HasValue)
                        {
                            <span>Last Updated: @Model.UpdatedDate.Value.ToString("MMM dd, yyyy")</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        <div class="mt-8 bg-white shadow rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">
                <i class="fas fa-star text-yellow-400 mr-2"></i>Reviews (@Model.Reviews.Count())
            </h3>
            <div class="space-y-4">
                @foreach (var review in Model.Reviews)
                {
                    <div class="border-b border-gray-200 pb-4 last:border-0">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                    <span class="text-primary-600 font-medium">@review.Customer?.FirstName[0]@review.Customer?.LastName[0]</span>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm font-medium text-gray-900">@review.Customer?.FirstName @review.Customer?.LastName</p>
                                    <p class="text-xs text-gray-500">@review.CreatedDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star text-sm @(i <= review.Rating ? "text-yellow-400" : "text-gray-300")"></i>
                                }
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(review.Title))
                        {
                            <h4 class="mt-2 font-medium text-gray-900">@review.Title</h4>
                        }
                        <p class="mt-1 text-gray-600">@review.Content</p>
                    </div>
                }
            </div>
        </div>
    }
</div>