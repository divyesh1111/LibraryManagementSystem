@model IEnumerable<LibraryManagementSystem.ViewModels.BookViewModel>
@{
    ViewData["Title"] = "Books";
}

<div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">
                <i class="fas fa-book text-blue-600 mr-2"></i>Books
            </h1>
            <p class="text-gray-600 mt-2">Manage your library book collection</p>
        </div>
        <a href="/Books/Create" class="mt-4 md:mt-0 inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            <i class="fas fa-plus mr-2"></i>Add New Book
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                <input type="text" name="searchString" value="@ViewBag.CurrentSearch" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Search by title, ISBN, or author...">
            </div>
            <div class="md:w-48">
                <label class="block text-sm font-medium text-gray-700 mb-1">Genre</label>
                <select name="genre" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Genres</option>
                    @if (ViewBag.Genres != null)
                    {
                        @foreach (var g in ViewBag.Genres)
                        {
                            <option value="@g" selected="@(ViewBag.CurrentGenre == g)">@g</option>
                        }
                    }
                </select>
            </div>
            <div class="flex items-end gap-2">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                    <i class="fas fa-search mr-2"></i>Search
                </button>
                <a href="/Books" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                    <i class="fas fa-times mr-2"></i>Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Results Count -->
    <div class="mb-4 text-gray-600">
        <span class="font-medium">@Model.Count()</span> book(s) found
    </div>

    <!-- Books Grid -->
    @if (Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var book in Model)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                    <!-- Book Cover -->
                    <div class="h-48 bg-gray-200 flex items-center justify-center">
                        @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                        {
                            <img src="@book.CoverImageUrl" alt="@book.Title" class="w-full h-full object-cover">
                        }
                        else
                        {
                            <i class="fas fa-book text-gray-400 text-5xl"></i>
                        }
                    </div>
                    
                    <!-- Book Info -->
                    <div class="p-4">
                        <h3 class="font-semibold text-lg text-gray-800 truncate" title="@book.Title">
                            <a href="/Books/Details/@book.Id" class="hover:text-blue-600">@book.Title</a>
                        </h3>
                        <p class="text-gray-600 text-sm mt-1">by @book.AuthorName</p>
                        
                        @if (!string.IsNullOrEmpty(book.Genre))
                        {
                            <span class="inline-block mt-2 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">
                                @book.Genre
                            </span>
                        }
                        
                        <div class="mt-3 flex items-center justify-between">
                            <span class="text-sm @(book.IsAvailable ? "text-green-600" : "text-red-600")">
                                <i class="fas @(book.IsAvailable ? "fa-check-circle" : "fa-times-circle") mr-1"></i>
                                @book.AvailableCopies / @book.TotalCopies available
                            </span>
                        </div>
                        
                        <!-- Actions -->
                        <div class="mt-4 flex gap-2">
                            <a href="/Books/Details/@book.Id" class="flex-1 text-center px-3 py-2 text-sm bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition">
                                <i class="fas fa-eye mr-1"></i>View
                            </a>
                            <a href="/Books/Edit/@book.Id" class="flex-1 text-center px-3 py-2 text-sm bg-blue-100 text-blue-700 rounded hover:bg-blue-200 transition">
                                <i class="fas fa-edit mr-1"></i>Edit
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <i class="fas fa-book-open text-gray-400 text-5xl mb-4"></i>
            <h3 class="text-xl font-medium text-gray-800">No books found</h3>
            <p class="text-gray-600 mt-2">Try adjusting your search or add a new book.</p>
            <a href="/Books/Create" class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                <i class="fas fa-plus mr-2"></i>Add New Book
            </a>
        </div>
    }
</div>