@model LibraryManagementSystem.ViewModels.BookEditViewModel
@{
    ViewData["Title"] = "Edit Book";
}

<div class="max-w-4xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-6">
        <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">
                <i class="fas fa-edit text-primary-600 mr-2"></i>Edit Book
            </h2>
        </div>
        <div>
            <a href="/Books" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
                <i class="fas fa-arrow-left mr-2"></i> Back to Books
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg">
        <form asp-action="Edit" method="post" class="p-6 space-y-6">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Title -->
                <div class="md:col-span-2">
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                </div>

                <!-- ISBN -->
                <div>
                    <label asp-for="ISBN" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="ISBN" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="ISBN" class="text-red-500 text-sm"></span>
                </div>

                <!-- Author -->
                <div>
                    <label asp-for="AuthorId" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="AuthorId" asp-items="Model.Authors" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                        <option value="">Select Author</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Category -->
                <div>
                    <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="CategoryId" asp-items="Model.Categories" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Library Branch -->
                <div>
                    <label asp-for="LibraryBranchId" class="block text-sm font-medium text-gray-700"></label>
                    <select asp-for="LibraryBranchId" asp-items="Model.LibraryBranches" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                        <option value="">Select Branch</option>
                    </select>
                    <span asp-validation-for="LibraryBranchId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Publication Date -->
                <div>
                    <label asp-for="PublicationDate" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="PublicationDate" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="PublicationDate" class="text-red-500 text-sm"></span>
                </div>

                <!-- Publisher -->
                <div>
                    <label asp-for="Publisher" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Publisher" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="Publisher" class="text-red-500 text-sm"></span>
                </div>

                <!-- Page Count -->
                <div>
                    <label asp-for="PageCount" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="PageCount" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="PageCount" class="text-red-500 text-sm"></span>
                </div>

                <!-- Language -->
                <div>
                    <label asp-for="Language" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Language" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="Language" class="text-red-500 text-sm"></span>
                </div>

                <!-- Price -->
                <div>
                    <label asp-for="Price" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">$</span>
                        </div>
                        <input asp-for="Price" type="number" step="0.01" class="block w-full pl-7 rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    </div>
                    <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
                </div>

                <!-- Total Copies -->
                <div>
                    <label asp-for="TotalCopies" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="TotalCopies" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="TotalCopies" class="text-red-500 text-sm"></span>
                </div>

                <!-- Available Copies -->
                <div>
                    <label asp-for="AvailableCopies" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="AvailableCopies" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="AvailableCopies" class="text-red-500 text-sm"></span>
                </div>

                <!-- Cover Image URL -->
                <div class="md:col-span-2">
                    <label asp-for="CoverImageUrl" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="CoverImageUrl" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border">
                    <span asp-validation-for="CoverImageUrl" class="text-red-500 text-sm"></span>
                </div>

                <!-- Description -->
                <div class="md:col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
                    <textarea asp-for="Description" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm px-3 py-2 border"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="flex justify-end space-x-4 pt-4 border-t">
                <a href="/Books" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 border border-transparent rounded-md shadow-sm hover:bg-primary-700">
                    <i class="fas fa-save mr-2"></i> Update Book
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}