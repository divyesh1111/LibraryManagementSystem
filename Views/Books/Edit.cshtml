@model LibraryManagementSystem.ViewModels.BookEditViewModel
@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mx-auto px-4 py-8">
    <!-- Back Button -->
    <a href="/Books" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6">
        <i class="fas fa-arrow-left mr-2"></i>Back to Books
    </a>

    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-8">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">
                <i class="fas fa-edit text-blue-600 mr-2"></i>Edit Book
            </h1>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="bg-red-100 text-red-700 p-4 rounded-lg mb-6"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Title -->
                    <div class="md:col-span-2">
                        <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- ISBN -->
                    <div>
                        <label asp-for="ISBN" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="ISBN" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="ISBN" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Author -->
                    <div>
                        <label asp-for="AuthorId" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <select asp-for="AuthorId" asp-items="Model.Authors" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="">-- Select Author --</option>
                        </select>
                        <span asp-validation-for="AuthorId" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Genre -->
                    <div>
                        <label asp-for="Genre" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Genre" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="Genre" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Publisher -->
                    <div>
                        <label asp-for="Publisher" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Publisher" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="Publisher" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Publication Date -->
                    <div>
                        <label asp-for="PublicationDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="PublicationDate" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="PublicationDate" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Page Count -->
                    <div>
                        <label asp-for="PageCount" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="PageCount" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="PageCount" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Library Branch -->
                    <div>
                        <label asp-for="LibraryBranchId" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <select asp-for="LibraryBranchId" asp-items="Model.LibraryBranches" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="">-- Select Branch --</option>
                        </select>
                        <span asp-validation-for="LibraryBranchId" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Total Copies -->
                    <div>
                        <label asp-for="TotalCopies" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="TotalCopies" type="number" min="0" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="TotalCopies" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Available Copies -->
                    <div>
                        <label asp-for="AvailableCopies" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="AvailableCopies" type="number" min="0" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="AvailableCopies" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Cover Image URL -->
                    <div class="md:col-span-2">
                        <label asp-for="CoverImageUrl" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="CoverImageUrl" type="url" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <span asp-validation-for="CoverImageUrl" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Description -->
                    <div class="md:col-span-2">
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <textarea asp-for="Description" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-8 flex gap-4">
                    <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                        <i class="fas fa-save mr-2"></i>Update Book
                    </button>
                    <a href="/Books" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                        Cancel
                    </a>
                    <a href="/Books/Delete/@Model.Id" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition ml-auto">
                        <i class="fas fa-trash mr-2"></i>Delete
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}